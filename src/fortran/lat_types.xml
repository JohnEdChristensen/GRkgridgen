<?xml version="1.0" encoding="UTF-8"?>
<fortpy mode="docstring">
  <decorates name="lat_types.identify_lattice">
    <group name="lat_id" purpose="testing" staging="../../unittests/">
      <test identifier="original" description="Tests lattice identification"
	    cases="hex[1-6],sc[1-5],fcc[1-9],bcc[1-7],trig[1-5],st[1-5],bct[1-7],so[1-5],bco[1-8],fco[1-10],baseco[1-7],sm[1-6],basecm[1-8],tric[1-6]"
	    timed="true">
	<output folder="./tests/lat_types"
		file="identify_lattice_lat_id.out.{}" template="integer.xml"
		identifier="identify_lattice_lat_id.out"/>
	<target name="lat_id" compareto="identify_lattice_lat_id.out"
		varfile="identify_lattice_lat_id.out" when="each"/>
      </test>
      <assignment name="lat_vecs" value="lvfile">
	<value identifier="lvfile" file="identify_lattice_vecs.in.{}"
	       folder="./tests/lat_types" rename="vecs.in"/>
      </assignment>
      <assignment name="eps" value="epsfile">
	<value identifier="epsfile" file="identify_lattice_eps.in.{}"
	       folder="./tests/lat_types" rename="eps.in"/>
      </assignment>
    </group>
  </decorates>  

  <decorates name="lat_types.canonical_basis">
    <group name="basis" purpose="testing" staging="../../unittests/">
      <test identifier="original" description="Tests of canoncial basis selection."
	    cases="sc2,bcc2,fcc2,hex2,trig2,st2,bct2,so2,baseco2,bco2,fco2,sm2,basecm2,tric2"
	    timed="true">
	<output folder="./tests/lat_types"
		file="canonical_basis.out.{}" template="float.xml"
		identifier="canonical_basis.out"/>
	<target name="c_basis" compareto="canonical_basis.out"
		varfile="canonical_basis.out" when="each"/>
      </test>
      <assignment name="lat_vecs" value="lvfile">
	<value identifier="lvfile" file="identify_lattice_vecs.in.{}"
	       folder="./tests/lat_types" rename="vecs.in"/>
      </assignment>
      <assignment name="lat_id" value="ldfile">
	<value identifier="ldfile" file="identify_lattice_lat_id.out.{}"
	       folder="./tests/lat_types" rename="lat_id.in"/>
      </assignment>
    </group>
  </decorates>  
</fortpy>
